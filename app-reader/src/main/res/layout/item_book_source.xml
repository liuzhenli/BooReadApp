<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_card_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_book_source_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_space_large"
        android:button="@drawable/qmui_s_checkbox" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/all_item_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_space_normal">

        <TextView
            android:id="@+id/tv_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="@string/book_source_name"
            android:textColor="@color/text_color_33"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:id="@+id/tv_source_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分组"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/txt_size_10" />
    </LinearLayout>


    <Switch
        android:id="@+id/view_show_recommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现"
        android:textColor="@color/s_text_66"
        android:textSize="@dimen/txt_size_10"
        android:track="@drawable/qmui_s_icon_switch" />

    <ImageView
        android:id="@+id/view_edit_book_source"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:src="@drawable/icon_edit" />

    <ImageView
        android:id="@+id/view_move_to_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_top" />

    <ImageView
        android:id="@+id/iv_book_source_visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/common_space_large"
        android:padding="@dimen/common_space_normal"
        android:src="@drawable/icon_delete" />

</LinearLayout>