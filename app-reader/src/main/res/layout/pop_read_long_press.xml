<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:alpha="0.9"
    android:background="#000000"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_space_small"
    android:paddingRight="@dimen/common_space_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="0.0dip">


        <FrameLayout
            android:id="@+id/fl_cp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/icon_long_press_action_copy"
                android:gravity="center"
                android:padding="@dimen/common_space_normal"
                android:text="复制"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/icon_long_press_action_search"
                android:gravity="center"
                android:padding="@dimen/common_space_normal"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/icon_quick_action_share"
                android:gravity="center"
                android:padding="@dimen/common_space_normal"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_replace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/common_space_normal"
                android:text="替换"
                android:textColor="#ffbbbbbb"
                android:textSize="14sp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_replace_ad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/common_space_normal"
                android:text="广告"
                android:textColor="#ffbbbbbb"
                android:textSize="14sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>