<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:elevation="1px"
        app:contentInsetStart="0dp"
        app:navigationIcon="@drawable/icon_back_white_icon">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="280dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/text_color_99"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_menu_book_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/common_space_large"
            app:srcCompat="@drawable/ic_baseline_bookmark" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tv_top_menu_chapter_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/common_space_large"
        android:layout_marginVertical="@dimen/common_space_normal"
        android:ellipsize="marquee"
        android:text=""
        android:textColor="@color/text_color_99" />
</LinearLayout>