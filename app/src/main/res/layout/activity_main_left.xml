<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_main_left"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_draw_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_night_mode"
        style="@style/ItemTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="@string/night_theme" />

    <TextView
        android:id="@+id/tv_login_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="皮肤"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_night_mode" />

    <TextView
        android:id="@+id/tv_main_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        style="@style/ItemTitleStyle"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="@string/feed_back" />

    <TextView
        android:id="@+id/tv_qq_group"
        style="@style/ItemTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="@string/join_qq_group" />

    <TextView
        android:id="@+id/tv_donate"
        style="@style/ItemTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="@string/donate" />

    <TextView
        android:id="@+id/tv_main_draw_setting"
        style="@style/ItemTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="@string/setting" />

    <TextView
        android:id="@+id/tv_main_draw_about"
        style="@style/ItemTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_item_height"
        android:background="@drawable/selector_card_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_large"
        android:text="@string/about" />


</LinearLayout>