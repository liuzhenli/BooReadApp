<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="cir_radius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="ringColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="centerText" format="string" />
    </declare-styleable>

    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
        <attr name="loading_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="ZLRoundView">
        <attr name="rv_backgroundColor" format="color" />
        <attr name="rv_backgroundPressColor" format="color" />
        <attr name="rv_cornerRadius" format="dimension" />
        <attr name="rv_strokeWidth" format="dimension" />
        <attr name="rv_strokeColor" format="color" />
        <attr name="rv_strokePressColor" format="color" />
        <attr name="rv_textPressColor" format="color" />
        <attr name="rv_isRadiusHalfHeight" format="boolean" />
        <attr name="rv_isWidthHeightEqual" format="boolean" />
        <attr name="rv_cornerRadius_TL" format="dimension" />
        <attr name="rv_cornerRadius_TR" format="dimension" />
        <attr name="rv_cornerRadius_BL" format="dimension" />
        <attr name="rv_cornerRadius_BR" format="dimension" />
        <attr name="rv_isRippleEnable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="image_radius" format="dimension" />//圆角大小
        <attr name="image_shadow_radius" format="dimension" />
        <attr name="image_circle" format="boolean" />
        <attr name="image_shadow" format="boolean" />
        <attr name="shadow_color" format="integer" />
    </declare-styleable>

</resources>